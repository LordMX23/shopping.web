<!-- Modal -->
<div class="modal fade" id="ModalConfirmacionBorrado" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmación Borrado</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" @onclick="()=> ConfirmacionOnCambia(false)"></button>
            </div>
            <div class="modal-body">
                Esta seguro que desea borrar?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" @onclick="()=> ConfirmacionOnCambia(false)">Cerrar</button>

                @if (ProcesoIniciado)
                {
                    <button type="button" class="btn btn-danger">Procesando...
                    </button>
                }
                else
                {
                    <button type="button" class="btn btn-danger" @onclick="()=> ConfirmacionOnCambia(true)">
                        <i class="bi bi-trash-fill"></i>&nbsp; Borrar
                    </button>
                }

            </div>
        </div>
    </div>
</div>